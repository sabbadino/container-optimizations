    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Bin Packing (step2)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/step2_box_placement_in_container.py",
            "args": [
                "inputs/step2_sample_packing_data_with_rotation.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Bin Packing (step1 only)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/step1_box_partition_in_containers.py",
            "args": [
                "inputs/step1_input_data_50_to_split_2_no_phase_2.json",
                "./outputs/out.json"   
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Bin Packing (step1 and 2) step1_input_data_50_to_split.json step2_settings_a.json",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/step1_box_partition_in_containers.py",
            "args": [
                "inputs/step1_input_data_50_to_split.json",
                "./outputs/out.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Bin Packing (step1 and 2) step1_input_data_50_to_split_2.json step2_settings_a.json",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/step1_box_partition_in_containers.py",
            "args": [
                "inputs/step1_input_data_50_to_split_2.json",
                "./outputs/out.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "ALNS step1_input_data_50_to_split_4_simple.json",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/alns_container_loading.py",
            "args": [
                "inputs/step1_input_data_50_to_split_4_simple.json",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "ALNS alns_input_data_50_items_1.json",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/alns_container_loading.py",
            "args": [
                "inputs/alns_input_data_50_items_1.json",
            ],
            "console": "integratedTerminal"
        },

        {
            "name": "ALNS MAIN alns_input_data_50_items_1.json",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--input",
                "inputs/alns_input_data_50_items_1.json",
                "--output",
                "outputs/alns_out.json",
                "--verbose"
            ],
            "console": "integratedTerminal"
        }
        
    ]
}